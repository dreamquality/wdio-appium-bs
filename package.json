{
  "name": "appium-boilerplate-e2e",
  "type": "module",
  "description": "Boilerplate project to run WebdriverIO tests with Appium to test native applications on iOS and Android",
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/appium-service": "^9.20.0",
    "@wdio/browserstack-service": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/junit-reporter": "^9.20.0",
    "@wdio/local-runner": "^9.20.1",
    "@wdio/mocha-framework": "^9.20.0",
    "allure-commandline": "^2.30.0",
    "appium": "^3.1.1",
    "appium-uiautomator2-driver": "^6.1.0",
    "appium-xcuitest-driver": "^10.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "wdio-wait-for": "^3.0.6"
  },
  "scripts": {
    "postinstall": "npx appium driver install uiautomator2 && npx appium driver install xcuitest || echo 'Drivers installation completed'",
    "test:android:bs": "wdio run ./config/wdio.conf.android.bs.ts",
    "test:android": "wdio run ./config/wdio.conf.android.ts",
    "test:ios": "wdio run ./config/wdio.conf.ios.ts",
    "test:ios:bs": "wdio run ./config/wdio.conf.ios.bs.ts",
    "allure": "npx allure serve ./reporters/allure-results",
    "allure:generate": "npx allure generate ./reporters/allure-results --clean",
    "debug": "node scripts/debug.js",
    "debug:env": "node scripts/debug.js env",
    "debug:connection": "node scripts/debug.js connection",
    "debug:apps": "node scripts/debug.js apps",
    "debug:sessions": "node scripts/debug.js sessions",
    "debug:all": "node scripts/debug.js all",
    "appium:start": "node scripts/appium-manager.js start",
    "appium:stop": "node scripts/appium-manager.js stop",
    "appium:restart": "node scripts/appium-manager.js restart",
    "appium:status": "node scripts/appium-manager.js status",
    "appium:health": "node scripts/appium-manager.js health",
    "test:android:reliable": "npm run appium:health && npm run test:android",
    "test:ios:reliable": "npm run appium:health && npm run test:ios"
  },
  "dependencies": {
    "@wdio/spec-reporter": "^9.20.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3"
  }
}
